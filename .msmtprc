# Set default values for all following accounts.
defaults
logfile ~/.msmtp.log
tls on
tls_starttls on
tls_trust_file /etc/openssl/cert.pem
auto_from on
keepbcc off

# A first gmail address
account gmail
host smtp.gmail.com
port 587
protocol smtp
auth on
user gurdiga@gmail.com

# Set a default account
# You need to set a default account for Mail
account default : gmail

{
  "root": true,
  "globals": {
    "console": false
  },
  "rules": {
    "comma-dangle": 2,
    "no-cond-assign": [2, "always"],
    "no-constant-condition": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-empty": 2, // disallow empty statements
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,

    // disallow multiple spaces in a regular expression literal
    "no-regex-spaces": 2,

    "no-sparse-arrays": 2,
    "no-unexpected-multiline": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-typeof": 2,
    "complexity": [2, 4],

    // require return statements to either always or never specify values
    "consistent-return": 2,

    "curly": [2, "multi-line"],
    "default-case": 2,
    "dot-location": [2, "property"],
    "eqeqeq": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-magic-numbers": 2,

    // Multiple spaces in a row that are not used for indentation are typically
    // mistakes.
    "no-multi-spaces": 2,

    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new-func": 2,

    // disallows creating new instances of String,Number, and Boolean
    "no-new-wrappers": 2,

    "no-new": 2,
    "no-octal-escape": 2,
    "no-octal": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,

    // disallow comparisons where both sides are exactly the same
    "no-self-compare": 2,

    // disallow use of the comma operator
    "no-sequences": 2,

    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-useless-concat": 2,
    "wrap-iife": [2, "any"],
    "strict": [2, "function"],
    "no-delete-var": 2,
    "no-shadow-restricted-names": 2,
    "no-shadow": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-use-before-define": [2, "nofunc"],
    "handle-callback-err": 2,
    "array-bracket-spacing": [2, "never"],
    "block-spacing": [2, "always"],
    "brace-style": 2,
    "camelcase": 2,
    "comma-spacing": [2, {
      "before": false,
      "after": true
    }],
    "comma-style": [2, "last"],
    "eol-last": 2,
    "func-style": [2, "declaration"],
    "indent": [2, 2],
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true,
      "align": "value" // "colon" or "value"
    }],
    "max-depth": [2, 4],
    "max-len": [2, 100, 4, {
      "ignoreUrls": true
    }],
    "max-statements": [2, 10],
    "new-cap": 2,
    "new-parens": 2,
    "newline-after-var": 2,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": 2,
    "no-negated-condition": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "object-curly-spacing": [2, "never"],
    "operator-linebreak": [2, "after"],
    "quote-props": [2, "always"],
    "quotes": [2, "single"],
    "semi-spacing": [2, {
      "before": false,
      "after": true
    }],
    "semi": [2, "always"],
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, {
      "anonymous": "never",
      "named": "never"
    }],
    "space-before-keywords": [2, "always"],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "space-unary-ops": 2,
    "spaced-comment": [2, "always"]
  }
}

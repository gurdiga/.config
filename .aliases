alias gs='git status'
alias gsh='git show'
alias gd='git diff'
alias gds='git diff --staged'
alias gdn='git diff --name-only'
alias ga='git add'
alias grh='git reset --hard'
alias gc='git commit -v'
alias gch='git checkout'
alias gl='git log --abbrev-commit'
alias gln='git log --abbrev-commit --name-only'
alias glg='git log --graph --pretty=oneline --abbrev-commit'
alias push='git push'
alias pull='git pull'
alias f='grep --color=always -n -I -R --exclude-dir=log --exclude-dir=tmp --exclude-dir=.git --exclude-dir=.svn --exclude-dir=session'
alias fi='find . -name'
alias v='~/vimp'
alias less='less -R'
alias j='jobs -l'
alias ff='google-chrome --user-data-dir=$HOME/.config/chrome.vlad & exit'
alias l='ls -hlaF'

# Breakout stuff
alias refreshdb='bundle exec rake db:drop db:create db:migrate db:test:clone_structure'
alias br='cd ~/src/breakout'
alias br2='cd ~/src/breakout2'
alias s='bundle exec rails server -d'
alias ss='killall -INT ruby1.8 && rm log/*.log'
alias c='rails console'
alias migrate='bundle exec rake db:migrate && RAILS_ENV=test bundle exec rake db:migrate'

alias profm90s='mplayer http://stream.profm.ro:8092/90s.mp3'
alias profmclassic='mplayer http://stream.profm.ro:8082/clasic.mp3'

[ "$OSTYPE" = "linux-gnueabi" ] && export PS1="    \[\033[0;33m\]\w\[\033[0;37m\] \[\033[0;32m\]ε\[\033[0;37m\]  "
[ "$OSTYPE" = "linux-gnu" ] && export PS1="    \[\033[0;33m\]\w\[\033[0;37m\] \[\033[0;32m\]Ξ\[\033[0;37m\]  "
[ "$OSTYPE" = "darwin12" ] && export PS1="    \[\033[0;33m\]\w\[\033[0;37m\] \[\033[0;35m\]⌘\[\033[0;37m\]  "

echo -n -e "\033]0;`whoami`@`hostname -f`\007"

export HISTSIZE=10000
export HISTCONTROL=ignoredups
export LC_CTYPE=en_US.UTF-8
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced
export EDITOR=vim
